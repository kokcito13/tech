{% extends "base.html.twig" %}

{% block body %}
    {{ form_start(form) }}
        {{ form_row(form.companySymbol) }}
        {{ form_row(form.email) }}
        {{ form_row(form.dateStart, {"attr":{"class":"date"}}) }}
        {{ form_row(form.dateEnd, {"attr":{"class":"date"}}) }}
        <div>
            <button type="submit" class="btn btn-info">{{ "Add date" | trans }}</button>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    <script>
        $( function() {
            $( ".date" ).datepicker({
                format: "YYYY-mm-dd"
            });
        } );
    </script>
{% endblock %}